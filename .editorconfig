# Top-most EditorConfig file
root = true

# Unix-style line endings
[*]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Python files
[*.py]
max_line_length = 120
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Exclude some directories
[**/migrations/**]
indent_size = 2
